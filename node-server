const express = require('express');
const app = express();
const PORT = 3000; // Node apps often default to port 3000

app.get('/', (req, res) => {
  res.status(200).send('<h1>Deployment Successful! Welcome to the Node.js App.</h1><p>Running on port ' + PORT + '</p>');
});

app.listen(PORT, () => {
  console.log(`Application listening at http://localhost:${PORT}`);
});

